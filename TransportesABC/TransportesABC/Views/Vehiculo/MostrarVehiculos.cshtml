@model IEnumerable<TransportesABC.Models.Auto>

@{
    ViewBag.Title = "MostrarVehiculos";
}

<h2>MostrarVehiculos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Folio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transmision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionEstetica)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Solicitud_Transporte.SolicitudID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Folio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transmision)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionEstetica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Solicitud_Transporte.SolicitudID)
        </td>
        <td>
            @Html.ActionLink("Editar Vehiculo", "EditarVehiculo", "Vehiculo", new { id=item.AutoID }, null)
            
        </td>
    </tr>
}

</table>
